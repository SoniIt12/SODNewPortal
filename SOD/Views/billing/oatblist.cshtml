<script>
    jQuery(document).ready(function ($) {
        $(function () {
            $("#txtfromdate").datepicker({
                numberOfMonths: 1,
                defaultDate: new Date(),
                maxDate: "+10M +00D",
                dateFormat: "dd/mm/yy"
            });
            $("#txtfromdate").datepicker('setDate', new Date());
        });

        $(function () {
            $("#txttodate").datepicker({
                numberOfMonths: 1,
                defaultDate: new Date(),
                maxDate: "+10M +00D",
                dateFormat: "dd/mm/yy"
            });
            $("#txttodate").datepicker('setDate', new Date())
        });
        $('#btnExport').click(function () {
            if (validate()) {
                var prm = ConvertMMddyyyy($("#txtfromdate").val()) + "," + ConvertMMddyyyy($("#txttodate").val());
                if ($("input[name='radio']:checked").val() == '1')
                    window.location = '../billing/ExportOatListFromTsv?strprm=' + prm;
                else
                    window.location = '../billing/ExportListFromTsvConsolidatedBulkBooking?strprm=' + prm;
            }
        });
     });

    //convert MM/dd/yyyy
    function ConvertMMddyyyy(dval) {
        var mval = (dval.split('/')[1] + '/' + dval.split('/')[0] + '/' + dval.split('/')[2]);
        return mval;
    }

    //Validate Date function
     function validate() {
        if ($('#txtfromdate').val() == "") {
            alert('Please select from date.');
            $('#txtfromdate').focus();
            return false;
        }
        else if ($("#txttodate").val() == "") {
            alert('Please select to date.');
            $('#txttodate').focus();
            return false;
        }
        else
            return true;
    }
</script>

