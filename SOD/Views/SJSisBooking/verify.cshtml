@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" href="http://www.spicejet.com/images/favicon9.ico" />
    <title>Sod |Email verification Notification</title>
    <link href="../asset/css/bootstrap.min.css" rel="stylesheet" />
    <script src="../js/jquery-2.1.1.min.js"></script>
    <script src="../asset/js/bootstrap.min.js"></script>
    <link href="../css/finalsodstyle.css" rel="stylesheet" />
    <style type="text/css">
        .succesmsg {
            font-size: 18px;
            margin-top: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>


<body>
    <div>
        <div class="bookingheadr">
            <div class="container">
                <div class="row">
                    <div class="col-md-2"><div class="logoheader"><img src="../img/logo_spicejet.png" /> </div></div>
                    <div class="col-md-4"><div class="txtSODNSOD"></div></div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
        <!--------------------------------------------Content---------------->
        <div class="container">
            <div style="padding-top:10%">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="succesmsg" id="dvMsg" style="display: flex; align-items: center; justify-content: center;">

                                <span>@Html.Raw(@TempData["jsonmsg"].ToString())</span> &nbsp;  &nbsp;
                                @if ((string)TempData["Img"] == "right")
                                {
                                    <span><img src="../img/right.jpg" height="15" width="15" title="Status" /></span>
                                }
                                else
                                {
                                    <span><img src="../img/rejected.png" height="15" width="15" title="Status" /></span>
                                }
                            </div>
                            <div class="succesmsg" id="dvMsg" style="display: flex; align-items: center; justify-content: center;">
                                <a href="../SJSisBooking/Login" style="color: #2a6496;
                                text-decoration: underline;">Please click here to login the portal</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!------Div Loader------------------------------------------------------>
            <div class="loader">
                <center>
                    <img class="loading-image" src="../images/loading.gif" alt="loading..">
                </center>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <div style="padding-top:100px; padding-bottom:20px; text-align:center">
                    </div>
                </div>
            </div>
        </div>

        <!--------------------------------------------Footer---------------->
        <div style="padding-top:70px;"></div>
        <footer class="essfooter">
            <div class="container"></div>
        </footer>
        <!-- ------------------------------------------END Footer---------------->
    </div>
</body>
</html>
