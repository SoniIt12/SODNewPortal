
@{
    Layout = null;
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="http://www.spicejet.com/images/favicon9.ico" />
    <title>Sod | Hotel Booking Response</title>
    <link href="../asset/css/bootstrap.min.css" rel="stylesheet" />
    <script src="../js/jquery-2.1.1.min.js"></script>
    <script src="../asset/js/bootstrap.min.js"></script>
    <link href="../css/finalsodstyle.css" rel="stylesheet" />
    <link href="../3D_button/3dbtn.css" rel="stylesheet" />
    <style type="text/css">
        .succesmsg {
            text-align: center;
            font-size: 25px;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .view-attach-container {
            border: solid 1px #e4e4e4;
            margin-top: 25px;
            width: 75%;
            margin: auto;
        }

        .box-margintop {
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <div>
        <div class="bookingheadr">
            <div class="headerimg">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3"><div class="logoheader"><img src="../img/logo_spicejet.png" /></div> </div>
                        <div class="col-md-9"></div>
                    </div>
                </div>
            </div>
        </div>


        <!--------------------------------------------Content---------------->
        <section class="box-margintop">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        @if ((string)@TempData["Type"] != "application/pdf")
                        {
                            <div class="view-attach-container">
                                <div class="mob_help_part">
                                    <a style="font-weight:bold;color:red;font-size:12px; float:right; padding:10px 10px" href="data:image/png;base64, @TempData["src"]" download="attachment.png"><img src="../images/help.png" class="dwnld-excel-format" style="height:25px;"> Download this attachment </a>
                                </div>
                                <div>
                                    @*<iframe src="data:image/png;base64, @ViewBag.src" style="width: 100%;height: 500px;border: none;"></iframe>*@
                                    <img src="data:image;base64, @TempData["src"]" style="width:95%"alt="attached Src" />
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="view-attach-container">
                                <div class="mob_help_part">
                                    <a style="font-weight:bold;color:red;font-size:12px; float:right; padding:10px 10px" href="data:application/pdf;base64, @TempData["src"]" download="attachment.pdf"><img src="../images/help.png" class="dwnld-excel-format" style="height:25px;"> Download this attachment </a>
                                </div>
                                <div>
                                    <iframe src="data:application/pdf;base64, @TempData["src"]" style="width: 100%;height: 500px;border: none;"></iframe>
                                    @*<iframe src="data:image;base64, @ViewBag.src" alt="attached Src" />*@
                                </div>
                            </div>
                        }


                    </div>                .
                </div>
            </div>

        </section>

        <!--------------------------------------------Footer---------------->
        <div style="padding-top:70px;"></div>
        <footer class="essfooter">
            <div class="container"></div>
        </footer>
        <!-- ------------------------------------------END Footer---------------->
    </div>


</body>
</html>
